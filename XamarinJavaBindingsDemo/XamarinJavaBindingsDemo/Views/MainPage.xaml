<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:XamarinJavaBindingsDemo"
             xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
             prism:ViewModelLocator.AutowireViewModel="True"
             x:Class="XamarinJavaBindingsDemo.Views.MainPage"
             Title="{Binding Title}">
    <Label Text="Welcome to the Xamarin Java Binding Demo" 
           VerticalOptions="Center" 
           HorizontalOptions="Center" />
    <StackLayout Orientation="Horizontal">
        <Button Text="Start Recording" Command="{Binding Start}" />
        <Button Text="Stop Recording" Command="{Binding Stop}"/>
    </StackLayout>
</ContentPage>